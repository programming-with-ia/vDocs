{
  "compilerOptions": {
    "target": "ES2021",
    // "lib": ["ES2021"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "outDir": "./build",
    "declaration": true,
    "lib": ["ESNEXT", "DOM", "DOM.Iterable", "ES2021"],
    // "emitDeclarationOnly": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "types": []
  },
  "include": ["./src/**/*", "./hooks/**/*", "./hooks/*.ts"],
  "exclude": ["./src/globals.ts", "node_modules"]
}
